{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "sync",
            "type": "shell",
            "command": "rsync -e \"ssh\" -av --info=progress2 --exclude \".git\" ~/code/samdriver.xyz/ sdriver@new.samdriver.xyz:/home/sdriver/samdriver.xyz"
        },
        {
            "label": "autoload",
            "type": "shell",
            "command": "docker-compose run --rm composer dump-autoload",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "phpunit",
            "type": "shell",
            "command": "docker-compose run --rm phpunit tests/",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "phpunit-coverage",
            "type": "shell",
            "command": "docker-compose run --rm phpunit --coverage-html tests/coverage tests/",
            "group": {
                "kind": "test",
                "isDefault": false
            }
        }
    ]
}